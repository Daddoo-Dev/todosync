{
  "name": "todo-sync",
  "displayName": "ToDoSync",
  "description": "Sync VS Code workspace tasks with Notion projects (Status only)",
  "version": "1.1.6",
  "publisher": "DaddooDev",
  "repository": {
    "type": "git",
    "url": "https://github.com/shawnmcpeek/todosync"
  },
  "icon": "todosync.png",
  "galleryBanner": {
    "color": "#1E3A8A",
    "theme": "dark"
  },
  "keywords": [
    "notion",
    "todo",
    "tasks",
    "productivity",
    "sync",
    "task management",
    "project management",
    "notion integration",
    "notion sync"
  ],
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "todo-sync.linkProject",
        "title": "ToDoSync: Link Project"
      },
      {
        "command": "todo-sync.syncNow",
        "title": "ToDoSync: Sync Now"
      },
      {
        "command": "todo-sync.syncAll",
        "title": "ToDoSync: Sync All"
      },
      {
        "command": "todo-sync.setApiKey",
        "title": "ToDoSync: Set Notion API Key"
      },
      {
        "command": "todo-sync.toggleStatus",
        "title": "Change Status"
      },
      {
        "command": "todo-sync.addTask",
        "title": "Add Task"
      },
      {
        "command": "todo-sync.viewProjects",
        "title": "ToDoSync: View Tracked Projects"
      },
      {
        "command": "todo-sync.unlinkProject",
        "title": "ToDoSync: Unlink Current Project"
      },
      {
        "command": "todo-sync.importTasks",
        "title": "ToDoSync: Import Tasks from File"
      },
      {
        "command": "todo-sync.refreshLicense",
        "title": "ToDoSync: Refresh License Status"
      },
      {
        "command": "todo-sync.deleteTask",
        "title": "Delete Task"
      },
      {
        "command": "todo-sync.askAi",
        "title": "ToDoSync: âœ¨ Ask AI (Copy Task Snapshot)",
        "icon": "$(sparkle)"
      },
      {
        "command": "todo-sync.openSettings",
        "title": "ToDoSync: Settings"
      }
    ],
    "keybindings": [
      {
        "command": "todo-sync.addTask",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      },
      {
        "command": "todo-sync.syncNow",
        "key": "f5",
        "mac": "f5"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "todo-sync.addTask",
          "when": "view == todo-sync-projects",
          "group": "navigation@1"
        },
        {
          "command": "todo-sync.syncNow",
          "when": "view == todo-sync-projects",
          "group": "navigation@2",
          "icon": "$(refresh)"
        },
        {
          "command": "todo-sync.askAi",
          "when": "view == todo-sync-projects",
          "group": "navigation@3",
          "icon": "$(sparkle)"
        }
      ],
      "view/item/context": [
        {
          "command": "todo-sync.toggleStatus",
          "when": "view == todo-sync-projects && viewItem == taskItem",
          "group": "inline"
        },
        {
          "command": "todo-sync.deleteTask",
          "when": "view == todo-sync-projects && viewItem == taskItem",
          "group": "destructive"
        },
        {
          "command": "todo-sync.askAi",
          "when": "view == todo-sync-projects && viewItem == taskItem",
          "group": "inline",
          "icon": "$(sparkle)"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "todo-sync-projects",
          "name": "ToDoSync",
          "icon": "todosync.png"
        }
      ]
    },
    "configuration": {
      "title": "ToDoSync",
      "properties": {
        "todoSync.trackedProjects": {
          "type": "array",
          "default": [],
          "scope": "window",
          "description": "Workspace-scoped links of VS Code folders to Notion database IDs"
        },
        "todoSync.enableDebug": {
          "type": "boolean",
          "default": false,
          "scope": "application",
          "description": "Enable debug logging to Output channel"
        },
        "todoSync.refreshIntervalMinutes": {
          "type": "number",
          "default": 5,
          "scope": "window",
          "description": "Auto-refresh interval in minutes"
        },
        "todoSync.hideCompletedTasks": {
          "type": "boolean",
          "default": false,
          "scope": "window",
          "description": "Hide tasks with 'Done' status from the tree view"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/vscode": "^1.84.0",
    "typescript": "^5"
  },
  "dependencies": {
    "@notionhq/client": "^2",
    "dotenv": "^16",
    "@supabase/supabase-js": "^2"
  }
}


